<div class="container" style="margin-top:30px">
    <div class="row">
        <div class="col-sm-3 filter-list">
            <h2>Filter</h2>
            <h5>Category</h5>
            <button class="btn btn-link col-md-12 text-left" type="button" onclick="addFilter('cat', 'all', {{data._id}})">All</button>
            <button class="btn btn-link col-md-12 text-left" type="button" onclick="addFilter('cat', 'music', {{data._id}})">Music</button>
            <button class="btn btn-link col-md-12 text-left" type="button" onclick="addFilter('cat','artsnculture', {{data._id}})">Arts & Culture</button>
            <button class="btn btn-link col-md-12 text-left" type="button" onclick="addFilter('cat','sportsnwellness', {{data._id}})">Sports & Wellness</button>
            <button class="btn btn-link col-md-12 text-left" type="button" onclick="addFilter('cat','foodndrinks', {{data._id}})">Food & Drinks</button>

        </div>
        <div class="col-sm-9">
            <div class="row">
                <div class="col-md-4"><h2>Latest Events</h2></div>
